@using EmployeeManagementSystem.WebMVC.Models.Enums



<div class="row">
    <div class="col-md-12">
    </div>
    <div class="col-lg-12">
        <h4 class="text-center text-success">List of Employees</h4>
        <button type="button" onclick="FindEmployee();" id="btnFind" class="float-md-end btn btn-secondary btn-sm ml-2">Search</button>
        <input type="text" class="form-control-sm float-lg-end" id="txtLastName" placeholder="Please, enter the last name" />
        <input type="text" class="form-control-sm float-lg-end" id="txtFirstName" placeholder="Please, enter the first name" />
        <partial name="~/Views/Shared/PartialViews/_EmployeeCreateModal.cshtml" />
    </div>
    <div class="col-lg-12 mt-4">
        <table class="table table-bordered table-responsive" id="employeesTable">
            <thead>
                <tr class="text-center">
                    <th>Photo</th>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Gender</th>
                    <th>Department</th>
                    <th>Start date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="tableBody">
            </tbody>
        </table>
    </div>

</div>

@section Scripts{ 
    <script src="~/js/employee.js"></script>
}
    


